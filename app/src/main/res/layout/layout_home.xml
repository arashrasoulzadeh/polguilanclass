<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#dfe5ee"
    android:id="@+id/scrview">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">



<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:background="#a2c517"
    android:id="@+id/header">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:padding="10dp" />

    <TableRow
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:id="@+id/home_calldirect"

            android:src="@drawable/phone" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:id="@+id/home_telegram"

            android:src="@drawable/telegram"/>
    </TableRow>
</FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="درباره آموزشکده"
            android:id="@+id/textView9"
            android:paddingBottom="5dp"
            android:textColor="#AAA" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="معرفی آموزشکده"
                        android:padding="8dp"
                        android:id="@+id/textView4"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView2"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/about"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="دوره های آموزشکده"
            android:id="@+id/textView10"
            android:textColor="#AAA"
            android:paddingBottom="5dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_gift" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="دریافت کارت هدیه"
                        android:padding="8dp"
                        android:id="@+id/textView13"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView11"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/gift"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_2" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="آموزش تعمیرات موبایل و تبلت"
                        android:padding="8dp"
                        android:id="@+id/textView6"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView7"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/mobile"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_3" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="آموزش برنامه نویسی اندروید"
                        android:padding="8dp"
                        android:id="@+id/textView"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView3"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/androidamozesh"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_4" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="آموزش دوربین مداربسته"
                        android:padding="8dp"
                        android:id="@+id/textView3"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/dorbin"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_5" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="آموزش ساخت تابلو روان"
                        android:padding="8dp"
                        android:id="@+id/textView2"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/tab"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_6" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="آموزش تعمیرات لپ تاپ"
                        android:padding="8dp"
                        android:id="@+id/textView5"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView6"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/computer"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="تماس با آموزشکده"
            android:id="@+id/textView7"
            android:textColor="#AAA"
            android:paddingBottom="5dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_7" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="آدرس و ساعت کار"
                        android:padding="8dp"
                        android:id="@+id/textView8"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView8"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/tell"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_8" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="شماره های تماس"
                        android:padding="8dp"
                        android:id="@+id/textView12"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView10"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/map"
                    android:scaleType="fitCenter"
                    android:layout_weight="1" />
            </TableRow>
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:id="@+id/btn_home_9" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="پل در شبکه های اجتماعی"
                        android:padding="8dp"
                        android:id="@+id/textView11"
                        android:layout_gravity="right|center_vertical" />
                </LinearLayout>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView9"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/social"
                    android:scaleType="fitCenter"
                     android:layout_weight="1" />
            </TableRow>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>


</ScrollView>
